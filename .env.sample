# Copy this file to .env and fill in real values

# App
NEXT_PUBLIC_SITE_URL=

# i18n
# Supported locales are handled in code, but keep this here if you want to reference it.
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Server-side only (never expose to the browser)
SUPABASE_SERVICE_ROLE_KEY=

# Supabase Postgres (server-side only)
# Used by Supabase Stripe Sync Engine to mirror Stripe objects into Postgres.
# Format example:
# postgres://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres
SUPABASE_DATABASE_URL=
# Optional: CA certificate (PEM). If omitted, we fall back to rejectUnauthorized=false.
SUPABASE_DATABASE_SSL_CA=

# Stripe (server-side only)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# One-time promo generation (Stripe Checkout mode=payment)
# If you use dynamic price_data (recommended for % discounts), set these:
STRIPE_PROMO_CURRENCY=usd
# Unit amount in the smallest currency unit (e.g. cents for USD)
STRIPE_PROMO_UNIT_AMOUNT=

# Premium subscription
STRIPE_SUBSCRIPTION_PRICE_ID=
# Premium discount on promo generation (percentage)
STRIPE_PREMIUM_DISCOUNT_PERCENT=30

# (Optional) If you prefer using a fixed Stripe Price for one-time payments instead of dynamic price_data:
STRIPE_ONE_TIME_PRICE_ID=

# Optional: App URLs used for Stripe redirects if you don't want to derive from NEXT_PUBLIC_SITE_URL
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# fal.ai (server-side only)
FAL_KEY=
